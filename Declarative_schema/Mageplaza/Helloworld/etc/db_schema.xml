<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="helloworld_tbl" resource="default" engine="innodb" comment="Helloworld">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"
                comment="ID"/>       
        <column xsi:type="varchar" name="name" nullable="true" length="64" comment="Name"/>
        <column xsi:type="varchar" name="description" nullable="true" length="100" comment="Description"/>
        <column xsi:type="decimal" name="price" unsigned="true"  precision="5" scale="2" comment="Price"/>
        <column xsi:type="boolean" name="is_default"  default="0" comment="Defines Is Default"/>
        <column xsi:type="timestamp" name="created_at" default="CURRENT_TIMESTAMP" comment="Price"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="tmp">
            <column name="name"/>
        </constraint>
    </table>   
</schema>
